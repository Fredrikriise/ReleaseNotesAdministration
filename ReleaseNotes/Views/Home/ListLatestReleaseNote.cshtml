@foreach (var item in Model)
{
    <div id="releaseNoteTitle">
        <!--@Html.DisplayNameFor(model => model.title)-->
        @Html.DisplayFor(modelItem => item.title)
    </div>

    @Html.DisplayNameFor(model => model.createdBy) <span id="creatorName">@Html.DisplayFor(modelItem => item.createdBy)</span> @Html.Raw("on ") @Html.DisplayFor(modelItem => item.createdDate)
    <hr id="hrTag" />
    <br>
    @Html.DisplayFor(modelItem => item.bodytext)

    <!--
    @Html.DisplayFor(modelItem => item.id)
    <br>
    @Html.DisplayFor(modelItem => item.productId)
    -->
    <br>
    <!--
    <div style=font-weight:bold>
        @Html.DisplayNameFor(model => model.createdDate)
    </div>
    @Html.DisplayFor(modelItem => item.createdDate)
    <br> -->

    <!-- if loop to check if the releasenotes hanst been updated -->
    @if (item.lastUpdatedBy.Length != 0)
    {
        <div id="updatedText">
            @Html.DisplayNameFor(model => model.lastUpdatedBy) @Html.Raw(" ") <span id="updateName">@Html.DisplayFor(modelItem => item.lastUpdatedBy)</span> @Html.Raw("on ") @Html.DisplayFor(modelItem => item.lastUpdatedDate)
        </div>
    }
    <hr />
    <br>
    <br>
}