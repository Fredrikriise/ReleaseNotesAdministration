@model IEnumerable<ReleaseNotes.Models.releaseNotes>



@{
    ViewData["Title"] = "ListLatestReleaseNote";
}


<style>
    #headerTitle {
        font-size: 250%;
        margin-bottom: 5.5%;
        margin-top: 2%
    }

    #releaseNoteTitle {
        font-weight: bold;
        font-size: 125%;
    }

    #creatorName, #updateName {
        font-weight: bold;
        font-style: italic;
    }

    #hrTag {
        margin-bottom: -1.5%;
    }

    #updatedText {
        margin-top: 1.25%;
        margin-bottom: -1%;
    }
</style>



<h1 id="headerTitle">Newest published release note</h1>
