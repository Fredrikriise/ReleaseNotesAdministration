@model ReleaseNotes.ViewModels.HomeControllerViewModel

@{
    ViewData["Title"] = "TalentOnboardingReleaseNotes";
}

<style>
    .headerTitle {
        font-size: 250%;
        margin-bottom: 2.5%;
    }

    .releaseNoteTitle {
        font-weight: bold;
        font-size: 125%;
    }

    .creatorName, #updateName {
        font-weight: bold;
        font-style: italic;
    }

    .hrTag {
        margin-bottom: -1.5%;
    }

    .updatedText {
        margin-top: 1.25%;
        margin-bottom: -1%;
    }

    .submitButton {
        margin-top: 0.25%;
    }
</style>


<h1 class="headerTitle">Release notes for Talent Onboarding</h1>
@foreach (var item in Model.ReleaseNotes)
{
    <div class="releaseNoteTitle">
        @Html.DisplayFor(modelItem => item.Title)
    </div>

    @Html.DisplayNameFor(model => model.CreatedBy) <span class="creatorName">@Html.DisplayFor(modelItem => item.CreatedBy)</span> @Html.Raw("on ") @Html.DisplayFor(modelItem => item.createdDate)
    <hr class="hrTag" />
    <br>
    @Html.DisplayFor(modelItem => item.Bodytext)
    <br>

    <!-- if loop to check if the releasenotes hanst been updated -->
    @if (item.LastUpdatedBy != null)
    {
<div class="updatedText">
    @Html.DisplayNameFor(model => model.LastUpdatedBy) @Html.Raw(" ") <span class="updateName">@Html.DisplayFor(modelItem => item.LastUpdatedBy)</span> @Html.Raw("on ") @Html.DisplayFor(modelItem => item.LastUpdatedDate)
    Last updated by + <span class="updateName"> <label asp-for="ReleaseNotes."></label> @Html.DisplayFor(modelItem => item.LastUpdatedBy)</span> @Html.Raw("on ") @Html.DisplayFor(modelItem => item.LastUpdatedDate)

    <label asp-for="ReleaseNotes."></label>
</div>
    }
    <hr />

<form asp-controller="Home" asp-action="action" method="post">
    <input placeholder="Would you like to subscribe to updates? Enter your email!" /> <!--asp-for="UserEmail"-->
    <div class="submitButton"><input type="submit" value="Subscribe" /></div>
</form>
 
    <br>
    <br>

}


