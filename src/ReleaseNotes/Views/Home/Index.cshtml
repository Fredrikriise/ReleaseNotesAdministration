@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<ReleaseNotes.ViewModels.ProductViewModel>

<div class="text-center">
    <h1 class="display-4">Talentech - Release Notes</h1>
    <hr />
    <h3>Which product would you like to view release notes from?</h3>
    <!-- CARDS -->
    <div class="row mt-4 col-12">
        @foreach (var item in Model)
        {
        <div class="col-4">
            <div class="card" id="@Html.DisplayFor(modelItem => item.ProductID)">
                <div class="card-body">
                    <a asp-controller="Home" asp-action="@item.ProductDescription">
                        <img src="@Html.DisplayFor(modelItem => item.ProductImage)" alt="product icon"/>
                        <hr />
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h4>
                    </a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
