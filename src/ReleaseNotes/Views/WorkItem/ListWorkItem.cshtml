@model ReleaseNotes.ViewModels.WorkItemViewModel

@{
    ViewData["Title"] = "View Workitem";
}

<div class="text-center mb-3">
    <label class="display-4">Talentech - Release Notes</label>
    <hr />
</div>

<div class="main-content">
    <!-- Back-button -->
    <div class="float-left mt-2">
        <a href='javascript:history.go(-1)'>
            <span class="fas fa-arrow-left"></span>
            Back to previous page
        </a>
    </div>
    <br />

    <div class="productData mt-4">
        <h4 class="mt-5 mb-3">Work item information</h4>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="@Model.Id">Id</label>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Title">Title</label>
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.State">State</label>
            </dt>
            <dd class="col-sm-10">
                @Model.State
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.AssignedTo">Assigned to</label>
            </dt>
            <dd class="col-sm-10">
                @Model.AssignedTo
            </dd>
        </dl>
    </div>
</div>