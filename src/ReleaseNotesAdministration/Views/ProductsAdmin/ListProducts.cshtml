@model IEnumerable<ReleaseNotesAdministration.ViewModels.ProductAdminViewModel>

@{
    ViewData["Title"] = "All Products";
}

<h3>All Products</h3>

<a asp-controller="ProductsAdmin" asp-action="Create">
    Add new
</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Image
            </th>
            <th>
                Product Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.ProductId
            </td>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.ProductImage
            </td>
            <td>
                @item.ProductDescription
            </td>
            <td>
                <!-- Endre disse slik vi gjorde i list release notes -->
                <a asp-controller="ProductsAdmin" asp-action="EditProduct" asp-route-id="@item.ProductId">
                    <span class="editButton btn btn-default">Edit</span>
                </a> |
                <a asp-controller="ProductsAdmin" asp-action="DeleteProduct" asp-route-id="@item.ProductId">
                    <span class="deleteButton btn btn-default">Delete</span>
                </a>
            </td>
        </tr>
       }
    </tbody>
</table>
