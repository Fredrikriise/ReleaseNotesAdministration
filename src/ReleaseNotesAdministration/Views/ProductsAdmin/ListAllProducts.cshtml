@model IEnumerable<ReleaseNotesAdministration.ViewModels.ProductAdminViewModel>

@{
    ViewData["Title"] = "All Products";
}

    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                    });
                });
            });
        </script>


        <script type="text/javascript">
            $(document).ready(function () {
                if ('@TempData["CreateProduct"]' == "Success") {
                    window.toastr.success("You have successfully added a new product");
                } else if ('@TempData["CreateProduct"]' == "Failed") {
                    window.toastr.error("An error occured when trying to create a new product");
                } else if ('@TempData["DeleteProduct"]' == "Success") {
                    window.toastr.success("Product was successfully deleted");
                }
            });
        </script>
    </head>

    <div>
        <div class="text-center">
            <h1 class="display-4">Talentech - Release Notes Administration</h1>
            <hr class="hrTag mb-5" />
        </div>
            <h2 class="mb-3">All products</h2>

            <div class="d-flex justify-content-between mb-3">
                <!-- Temporary code for search function -->
                <form class="col-6 d-inline-block float-left pl-0">
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" id="myInput" placeholder="Search">
                        <div class="input-group-append">
                            <button class="input-group-text"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>

                <div class="float-right">
                    <a asp-controller="ProductsAdmin" asp-action="Create">
                        <span class="btn btn-outline-primary float-right"><i class="fa fa-plus"></i> Add new product</span>
                    </a>
                </div>
            </div>
            <table class="table">
                <thead style="border-top: 0px;">
                    <tr>
                        <th class="border-0">
                            Product Name
                        </th>
                        <th class="border-0">
                            Product Image
                        </th>
                        <th class="border-0">
                            Product Image Url
                        </th>
                    </tr>
                </thead>
                <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    <img src="~/@item.ProductImage" alt="@item.ProductName product icon" height="70" width="90" />
                                </td>
                                <td>
                                    @item.ProductImage
                                </td>
                                <td>
                                    <a asp-controller="ProductsAdmin" asp-action="ViewProduct" asp-route-id="@item.ProductId">
                                        <span class="btn btn-outline-secondary"><i class="fa fa-eye"></i> View</span>
                                    </a>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
