@model ReleaseNotesAdministration.ViewModels.ProductAdminViewModel

@{
    ViewData["Title"] = "Edit Product";
}

    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/core.js"></script>
        <script>
            //Client validation
            $(document).ready(function () {
                $(".submitButton").click(function (evt) {
                    var ProductName = document.getElementById('ProductName').value;
                    var ProductImage = document.getElementById('ProductImage').value;


                    if (ProductName.length == 0) {
                        evt.preventDefault();
                        document.getElementById('ProductNameValidation').innerHTML = "*Product name is required to update a product!";
                        document.getElementById('ProductNameValidation').style.color = "red";

                        $("#ProductName").on('keyup', function () {
                            var ok = "";
                            $("#ProductNameValidation").html(ok);
                        });
                    }

                    if (ProductImage.length == 0) {
                        evt.preventDefault();
                        document.getElementById('ProductImageValidation').innerHTML = "*Product image is required to update a product!";
                        document.getElementById('ProductImageValidation').style.color = "red";

                        $("#ProductImage").on('keyup', function () {
                            var ok = "";
                            $("#ProductImageValidation").html(ok);
                        });
                    }
                });
            });
        </script>
    </head>

<div>
    <h2>Edit Product</h2>
    <div>
        <a asp-controller="ProductsAdmin" asp-action="ListAllProducts"><i class="fa fa-arrow-left"></i> Back to release notes</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Product name</label>
                    <input asp-for="ProductName" class="form-control" id="ProductName"/>
                    <span id="ProductNameValidation"></span>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label">Product image name (example: test-image1.png)</label>
                    <input asp-for="ProductImage" class="form-control" id="ProductImage"/>
                    <span id="ProductImageValidation"></span>
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <input class="btn btn-outline-success float-left submitButton" type="submit" value="Save product"  />
                    <a class="btn btn-outline-danger float-right" asp-controller="ProductsAdmin" asp-action="ListAllProducts"><i class="fa fa-times"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}