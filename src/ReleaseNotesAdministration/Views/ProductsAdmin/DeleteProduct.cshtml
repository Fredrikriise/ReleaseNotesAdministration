@model ReleaseNotesAdministration.ViewModels.ProductAdminViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<style>
    .backButton {
        background-color: white;
        color: black;
        border: 1px solid;
        border-color: lightcoral;
    }
</style>

<h3>You are about to delete this product, are you sure you want to proceed?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
    </dl>

    <form asp-action="DeleteProduct">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="backButton btn btn-default" asp-controller="ProductsAdmin" asp-action="ListAllProducts"><i class="fa fa-arrow-left"></i> Back to list</a>
    </form>
</div>
