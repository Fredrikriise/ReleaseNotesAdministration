@model ReleaseNotesAdministration.ViewModels.ProductAdminViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<script type="text/javascript">
    $(document).ready(function () {
        if ('@TempData["EditProduct"]' == "Success") {
            window.toastr.success("You successfully edited this product");
        } else if ('@TempData["EditProduct"]' == "Failed") {
            window.toastr.error("An error occured when trying to edit this product. Please try again.");
        }
    });
</script>

<div class="main-content">
    <!-- Back-button -->
    <div class="float-left mt-2">
        <a asp-controller="ProductsAdmin"
           asp-action="ListAllProducts">
            <i class="fas fa-arrow-left"></i>
            Back to product
        </a>
    </div>

    <!-- Modal for delete -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-body">
                    Are you sure you want to delete this product?
                    <br/>
                    <form asp-controller="ProductsAdmin" asp-action="DeleteProduct" asp-route-id="@Model.ProductId">
                        <button type="submit" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash"></i> Delete</button>
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete and Edit button -->
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal">
            <i class="fa fa-trash"></i> Delete
        </button>

        <a class="btn btn-outline-secondary mr-1"
           asp-controller="ProductsAdmin"
           asp-action="EditProduct"
           asp-route-id="@Model.ProductId">
            <i class="fa fa-cog"></i>Edit
        </a>
    </div>

    <div class="productData">
        <br />
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="@Model.ProductId">Product id</label>
            </dt>
            <dd class="col-sm-10">
                @Model.ProductId
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.ProductName">Product name</label>
            </dt>
            <dd class="col-sm-10">
                @Model.ProductName
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.ProductImage">Product logo url</label>
            </dt>
            <dd class="col-sm-10">
                @Model.ProductImage
            </dd>
        </dl>
    </div>
</div>