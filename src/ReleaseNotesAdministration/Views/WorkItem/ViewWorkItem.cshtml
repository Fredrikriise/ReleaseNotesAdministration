@model ReleaseNotesAdministration.ViewModels.WorkItemViewModel

@{
    ViewData["Title"] = "View Workitem";
}

<head>
    <script type="text/javascript">
    $(document).ready(function () {
        if ('@TempData["EditWorkItem"]' == "Success") {
            window.toastr.success("Work item was successfully edited!");
        } else if ('@TempData["EditWorkItem"]' == "Failed") {
            window.toastr.error("An error occured when trying to edit the work item. Please try again.");
        }
    });
    </script>
</head>

<div class="main-content">
    <!-- Back-button -->
    <div class="float-left mt-2">
        <a href='javascript:history.go(-1)'>
            <i class="fas fa-arrow-left"></i>
            Go back
        </a>
    </div>

    <!-- Modal for delete -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-body">
                    Are you sure you want to delete this work item?
                    <br />
                    <form asp-controller="WorkItem" asp-action="DeleteWorkItem" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash"></i> Delete</button>
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete and Edit button -->
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal">
            <i class="fa fa-trash"></i> Delete
        </button>

        <a class="btn btn-outline-secondary mr-1"
           asp-controller="WorkItem"
           asp-action="EditWorkItem"
           asp-route-id="@Model.Id">
            <i class="fa fa-cog"></i> Edit
        </a>
    </div>

    <div class="productData">
        <h4 class="mt-4">Work item information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="@Model.Id">Id</label>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Title">Title</label>
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.State">State</label>
            </dt>
            <dd class="col-sm-10">
                @Model.State
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.AssignedTo">Assigned to</label>
            </dt>
            <dd class="col-sm-10">
                @Model.AssignedTo
            </dd>
        </dl>
    </div>
</div>