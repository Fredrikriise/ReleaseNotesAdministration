@model ReleaseNotesAdministration.ViewModels.ReleaseNoteAdminViewModel

@{
    ViewData["Title"] = "Delete Release note";
}

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<div class="main-content">
    <!-- Back-button -->
    <div class="float-left">
        <a class="btn btn-outline-danger"
           asp-controller="ReleaseNotesAdmin"
           asp-action="ListAllReleaseNotes">
            <i class="fa fa-arrow-left"></i>
            Back to release note
        </a>
    </div>

    <!-- Modal for delete -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-body">
                    Are you sure you want to delete this release note?
                    <form asp-controller="ReleaseNotesAdmin" asp-action="DeleteReleaseNote" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete and Edit button -->
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal">
            Delete
        </button>

        <a class="btn btn-outline-secondary mr-1"
           asp-controller="ReleaseNotesAdmin"
           asp-action="EditReleaseNote"
           asp-route-id="@Model.Id">
            Edit
        </a>
    </div>

    <!-- Displayed data for the selected Release Note -->
    <div class="releasenoteData">
        <br />
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BodyText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BodyText)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            @if (Model.LastUpdatedBy != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastUpdatedBy)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastUpdatedBy)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastUpdateDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastUpdateDate)
                </dd>
            }
        </dl>
    </div>
</div>